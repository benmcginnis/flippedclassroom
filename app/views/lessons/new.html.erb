<% provide(:title, 'Create New Lesson') %>
<h1>Create New Lesson</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@lesson) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.submit "Create New Lesson", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
