<%= provide(:title, "Add Download") %>
<h1>Add Download</h1>
<div class="row">
  <div class="span6 offset3">
	<%= form_for(@dc) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :download_link %>
      <%= f.text_field :download_link %>
      <%= f.label :instructions %>
      <%= f.text_area :instructions %>
      <%= f.hidden_field :lesson_id, :value => @lesson.id %>
      <%= f.submit "Add Content", class: "btn btn-large btn-primary" %>
      <% end %>
	</div>
</div>