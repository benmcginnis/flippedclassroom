<% provide(:title, "Create Web Content") %>
<h1>Create Web Content</h1>

<div class="row">
  <div class="span6 offset3">
	<%= form_for(@wc) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :contentlink %>
      <%= f.text_field :contentlink %>
      <%= f.hidden_field :lesson_id, :value => @lesson.id %>
      <%= f.submit "Add Content", class: "btn btn-large btn-primary" %>
      <% end %>
	</div>
</div>